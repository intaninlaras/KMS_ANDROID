<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:elevation="4dp"
    android:padding="4dp"
    android:radius="8dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    app:cardCornerRadius="8dp"
    android:backgroundTint="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/btn_nextKK"
            android:layout_alignParentStart="true"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_centerVertical="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/txv_namaKK"
                    android:text="Manajemen Informatika"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC" />
            </LinearLayout>

            <TextView
                android:id="@+id/txv_deskKK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="#777"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nam efficitur, sem eget eleifend tempor, elit ligula dignissim justo, eu euismod nisi leo et libero."
                android:textSize="11sp"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_nextKK"
            android:layout_width="49dp"
            android:layout_height="53dp"
            android:contentDescription="Icon Button"
            android:background="@drawable/ic_arrow_right"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
